include("sources.mozbuild")

with Files('**'):
    BUG_COMPONENT = ('Core', 'XML')

EXPORTS += [
    'expat/lib/expat.h',
    'expat/lib/expat_external.h',
    'expat/lib/moz_expat.h',
    'expat_config.h',
    'expat_config_moz.h',
    'expat_config_rlbox.h',
    'rlbox_expat.h',
    'rlbox_expat_types.h',
]

if CONFIG["MOZ_WASM_SANDBOXING_EXPAT"]:
    if CONFIG.get("MOZ_BUILD_APP") == "mobile/ios":
        SOURCES += expat_sources
    else:
        SOURCES += ['expat/lib/moz_xmltok.c']
else:
    SOURCES += expat_sources

if CONFIG["MOZ_BUILD_APP"].startswith("mobile/ios"):
    for source in expat_sources:
        if source not in SOURCES:
            SOURCES += [source]

LOCAL_INCLUDES += [
    '!/security/rlbox',
]

FINAL_LIBRARY = 'xul'

for k, v in expat_defines:
    DEFINES[k] = v
